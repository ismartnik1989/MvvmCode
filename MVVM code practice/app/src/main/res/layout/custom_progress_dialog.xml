<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/llMainLayout"
    android:background="@drawable/progress_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16.0dip">

    <ProgressBar
        android:layout_width="32.0dip"
        android:layout_height="32.0dip"
        android:indeterminateDrawable="@drawable/progress_drawable_white" />

    <com.mercari.minimercari.utills.CustomTextView
        android:id="@+id/tv_loading_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/space_8x"
        android:text="@string/common_loading"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        app:typeface="Myriad_Pro_Regular" />

</LinearLayout>